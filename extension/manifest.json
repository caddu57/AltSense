{
  "manifest_version": 3,
  "name": "AltSense",
  "version": "1.0",
  "description": "Gera alt-text autom√°tico para imagens usando Florence-2.",

  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/*"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "AltSense"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
